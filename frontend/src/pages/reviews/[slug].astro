---
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import { getReviewBySlug, formatDate, calculateReadingTime } from "../../lib/api";

const STRAPI_URL = import.meta.env.PUBLIC_STRAPI_URL ?? "http://localhost:1337";

function getStrapiMediaUrl(media: any) {
  const url = media?.data?.attributes?.url;
  if (!url) return null;
  return url.startsWith("http") ? url : `${STRAPI_URL}${url}`;
}
const { slug } = Astro.params;

let entry = null;
let error = "";

try {
  entry = await getReviewBySlug(slug as string)
  if (!entry) return Astro.redirect("/404");
} catch (e) {
  error = "no se pudo cargar la reseña.";
}

const r = entry?.attributes ?? {};

const title = r.title ?? "reseña";
const excerpt = r.excerpt ?? "";
const rating = Number(r.rating ?? 0);
const publishedAt = r.publishedAt ?? r.publishedDate ?? new Date().toISOString();

const coverUrl = getStrapiMediaUrl(r.cover) ?? "/images/placeholder.jpg";

const categories = (r.categories?.data ?? [])
  .map((c: any) => c?.attributes?.name)
  .filter(Boolean);const categoryLabel = categories[0] ?? "";

const seo = r.seo ?? null;

// content: si viene string html, ok. si viene objeto (strapi blocks), fallback
const rawContent = r.content;
const contentHtml =
  typeof rawContent === "string"
    ? rawContent
    : "<p>contenido no disponible en html (revisa el tipo de campo en strapi).</p>";

const readingTime = calculateReadingTime(contentHtml);
---

<Layout title={seo?.metaTitle || title} description={seo?.metaDescription || excerpt}>
  {error ? (
    <section class="section">
      <div class="container text-center">
        <p class="text-destructive text-lg">{error}</p>
      </div>
    </section>
  ) : (
    <>
      <div class="relative h-64 md:h-96 overflow-hidden">
        <img
          src={coverUrl}
          alt={`portada de ${title}`}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-background via-background/50 to-transparent"></div>
      </div>

      <article class="section -mt-24 relative z-10">
        <div class="container">
          <div class="max-w-4xl mx-auto">
            <header class="mb-10">
              {categoryLabel && (
                <div class="mb-4">
                  <span class="badge bg-primary/10 text-primary">{categoryLabel}</span>
                </div>
              )}

              <h1 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold text-foreground mb-4 text-balance">
                {title}
              </h1>

              {excerpt && (
                <p class="text-lg text-muted-foreground leading-relaxed mb-6 text-pretty">
                  {excerpt}
                </p>
              )}

              <div class="flex flex-wrap items-center gap-4 text-sm text-muted-foreground font-sans pb-6 border-b border-border">
                <time datetime={publishedAt}>{formatDate(publishedAt)}</time>
                <span>|</span>
                <span>{readingTime} min de lectura</span>
                <span>|</span>
                <span class="text-2xl font-bold text-primary">{rating.toFixed(1)}</span>
                <span class="text-xs text-muted-foreground">/ 10</span>
              </div>
            </header>

            <div class="prose-content mb-16">
              <Fragment set:html={contentHtml} />
            </div>

            <div class="border-t border-border pt-6">
              <a href="/reviews/" class="btn btn-secondary">&larr; volver a reseñas</a>
            </div>
          </div>
        </div>
      </article>
    </>
  )}
</Layout>

<style>
  .prose-content {
    font-family: "Inter", system-ui, sans-serif;
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--color-foreground);
  }
  .prose-content :global(h2) {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-foreground);
  }
  .prose-content :global(p) {
    margin-bottom: 1.25rem;
    color: var(--color-muted-foreground);
  }
</style>